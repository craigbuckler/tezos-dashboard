{
  "meta": {

    "app": "Tezos dashboard",
    "appshort": "Tezos",
    "root": "/",
    "language": "en",
    "stateDefault": "{}"

  },

  "design": {

    "font": {

      "size": "3vw",

      "body": {
        "face": "Roboto",
        "normal": 300,
        "bold": 500,
        "size": [ "1rem" ],
        "lineheight": 1.0
      },

      "head": {
        "face": "Eesti",
        "normal": 400,
        "bold": 600,
        "size": [ "", "2.6rem", "2.0rem", "1.4rem" ],
        "lineheight": 1.0
      }

    },

    "layout": {

      "grid": {
        "gap": "1vw",
        "cols": {
          "min": 6,
          "max": 12,
          "breakpoint": "800px"
        }
      },

      "widget": {
        "radius": "0.5vw"
      }

    },

    "color": {

      "dark": {
        "back": ["#201f25", "#161618", "#000"],
        "fore": ["#e9e9eb", "#a9a9ab", "#9e9e9e"],

        "high": ["#572c33", "#d0697a"],
        "med" : ["#583d28", "#e3a164"],
        "low" : ["#364734", "#91b78e"],

        "info": ["#2d3d57", "#7e92d9"]
      },

      "lite": {


      }

    }

  }

}
